<h1 class = "new-post-style">New Post</h1>

<%=form_for @post, html: { multipart: true } do |f| %>

	<%= f.label :title, class: "new-post-style" %>
	<%= f.text_area :title %>

	<br>
	<%= f.label :content, class: "new-post-style" %>
	<%= f.text_area :content %>

	<br>

	<%= f.label :image %>
	<%= f.file_field :avatar %>

	<%= f.submit %>
	<% end %>

<%= link_to 'Back', posts_path %>
